/*==========================================================
General Tag Styles
==========================================================*/
body
    background-color cd-background
    color cd-foreground
    font-family: 'Roboto', sans-serif;
    font-weight 200
    font-size: 14pt
    // height 100vh
    width 100%
    overflow-x hidden
    overflow-y: auto
h1
    font-size: 36pt
h2
    font-size: 28pt
h4
    font-size: 17pt
p
    font-size: 14pt

/*==========================================================
Global Class Styles
==========================================================*/
.inner-content
    margin auto
    max-width: inner-content-width
    padding-left: mobile-side-padding
    padding-right: mobile-side-padding

.max-content
    margin auto
    max-width: max-content-width
    padding-left: mobile-side-padding
    padding-right: mobile-side-padding    

.page
    position relative
    box-sizing: border-box
    min-height: 100vh
    width 100%
    overflow hidden
    padding-bottom 260px
